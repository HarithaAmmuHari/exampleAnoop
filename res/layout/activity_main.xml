<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12.0"
    tools:context="com.example.exampleanoop.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F26149"
        android:layout_weight="4.0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Cambridge"
            android:textColor="#75ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:text="Updated just now"
            android:textColor="#50ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="18"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7997B2"
        android:layout_weight="2.0" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
           android:layout_marginLeft="20dp"
            android:text="Tomorrow" 
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:text="11-21"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="A few clouds got together"
            android:textColor="#45ffffff"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:background="#819FBA" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Wednesday" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="A few clouds got together"
            android:textColor="#55ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:text="12-22"
            android:textColor="#ffffff"
           android:layout_marginTop="25dp"
                  android:textSize="25dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:background="#3A5276" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
           android:layout_marginTop="15dp"
          android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Thursday" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below="@+id/textView10"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="A little rain" 
            android:textColor="#55ffffff"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginRight="19dp"
            android:layout_alignParentRight="true"
            android:text="12-23"
            android:textColor="#ffffff"
           android:layout_marginTop="25dp"
                  android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:background="#F26149" >
    </RelativeLayout>

</LinearLayout>